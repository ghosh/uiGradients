{
  "name": "uigradients",
  "version": "3.0.0",
  "description": "Community contributed collection of beautiful multi-color gradients",
  "private": true,
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "deploy:api": "cd api && vercel --prod",
    "sanitze": "node scripts/sanitize.js",
    "web:dev": "yarn workspace @uigradients/web next dev",
    "web:start": "yarn workspace @uigradients/web next start",
    "web:build": "yarn workspace @uigradients/web next build",
    "api:dev": "yarn workspace @uigradients/api next dev -p 8080",
    "api:start": "yarn workspace @uigradients/api next start -p 8080",
    "api:build": "yarn workspace @uigradients/api next build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghosh/uiGradients.git"
  },
  "author": "Indrashish Ghosh <mail@ghosh.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ghosh/uiGradients/issues"
  },
  "homepage": "https://uigradients.com",
  "devDependencies": {
    "hex-to-hsl": "^1.0.2"
  }
}
